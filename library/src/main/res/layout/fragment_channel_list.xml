<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.getstream.sdk.chat.viewmodel.ChannelListViewModel" />

        <variable
            name="showMainProgressbar"
            type="boolean" />

        <variable
            name="noConnection"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ChannelListFragment">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_search_back"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/circle_channel_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_send_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_search"
                style="@style/text_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:focusable="false"
                android:hint="Search"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tv_search_back"
                app:layout_constraintEnd_toEndOf="@+id/tv_search_back"
                app:layout_constraintStart_toStartOf="@+id/tv_search_back"
                app:layout_constraintTop_toTopOf="@+id/tv_search_back" />

            <TextView
                android:id="@+id/tv_send_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_channel_send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sendicon"
                app:layout_constraintBottom_toBottomOf="@+id/tv_send_back"
                app:layout_constraintEnd_toEndOf="@+id/tv_send_back"
                app:layout_constraintStart_toStartOf="@+id/tv_send_back"
                app:layout_constraintTop_toTopOf="@+id/tv_send_back" />
        </android.support.constraint.ConstraintLayout>

        <ListView
            android:id="@+id/list_channels"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:divider="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_header"
            tools:listitem="@layout/list_item_channel" />

        <TextView
            style="@style/text_s"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_chat_no_connection"
            android:gravity="center"
            android:text="@string/no_connection"
            android:textColor="@color/red"
            android:visibility="gone"
            app:isGone="@{!noConnection}"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isGone="@{!showMainProgressbar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>
